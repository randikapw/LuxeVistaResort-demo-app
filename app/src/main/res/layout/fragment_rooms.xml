<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.room.RoomsFragment">


<!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/arrow"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textColor="@color/DeepTeal"
        android:textStyle="bold"
        android:padding="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edittext1"
        android:backgroundTint="@color/TealBlue">

        <ImageView
            android:layout_width="227dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-1dp"
            android:src="@drawable/pic1" />

        <TextView
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="250dp"
            android:text="Deluxe Rooms"
            android:textAlignment="center"
            android:textColor="@color/DeepTeal"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="156dp"
            android:layout_height="131dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:padding="10dp"
            android:text="Indulge in our luxurious Deluxe Rooms with ocean vistas.Experience comfort and create unforgettable memories.


            Price Per Night:35,000LKR"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="58dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_add_shopping_cart_24" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edittext1"
        android:backgroundTint="@color/LightBeige">

        <ImageView
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/b1" />

        <TextView
            android:layout_width="143dp"
            android:layout_height="73dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="220dp"
            android:text="Beachfront Suit"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="157dp"
            android:layout_height="143dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:padding="10dp"
            android:text="Indulge in the ultimate beachfront experience.This has ocean views,private balconies,and direct access to the pristine sands,creating an unforgettable escape.

            Price Per Night:35,800LKR"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/DeepTeal"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="59dp"
            android:layout_marginBottom="-2dp"
            android:src="@drawable/baseline_add_shopping_cart_24" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edittext1"
        android:backgroundTint="@color/DeepTeal">

        <TextView
            android:layout_width="152dp"
            android:layout_height="128dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:padding="10dp"
            android:text="Escape to your private beachfront oasis in our luxurious cabanas. Unwind in style with personalized service and breathtaking ocean views.


            Price Per Night:33,000LKR"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="59dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/baseline_add_shopping_cart_24" />

        <ImageView
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cabana1" />

        <TextView
            android:layout_width="143dp"
            android:layout_height="73dp"
            android:layout_marginRight="214dp"
            android:text="Cabana"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="normal" />


    </RelativeLayout>


</LinearLayout>



</ScrollView>