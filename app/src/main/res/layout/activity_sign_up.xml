<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.signin.SignUpActivity">


    <TextView
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/DeepTeal"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp"
        app:srcCompat="@drawable/beach2" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|fill"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:showDividers="middle"
        android:dividerPadding="16dp"
        android:minHeight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">
        


        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="70dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_add_a_photo_24" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edittext1"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="text"
            android:minHeight="44dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edittext1"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:minHeight="44dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editNIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edittext1"
            android:ems="10"
            android:hint="Enter NIC"
            android:inputType="text"
            android:minHeight="44dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edittext1"
            android:ems="10"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:minHeight="44dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Female" />

        </RadioGroup>

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edittext1"
            android:ems="10"
            android:hint="Enter DateOfBirth"
            android:inputType="date"
            android:minHeight="44dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edittext1"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:minHeight="44dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#EBEB65"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/DeepTeal"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dpLogin"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Already have an account? Login"
            android:layout_gravity="center"
            android:textAlignment="center" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>